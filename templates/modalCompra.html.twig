<div id="modalCompra" class="modal">
    <div class="modal-content" id="modalContent">
         <div class="row">
             <div class="col s12"><h2>Agregar a la compra</h2></div>
             <div class="col s12" id="productName"><h5></h5></div>
             <div class="col s12" id="productProspect"><h5></h5></div>
             <div class="col s12" id="productPrice"><h5></h5></div>
             <form action="./?action=product_add" method="POST">
                 <div class="row">
                     <div class="input-field col s6">
                         <input type="number" name="productCant" max="1000" min="0">
                         <label for="productCant">Cantidad a comprar</label>
                         <input type="text" id="productId" name="productId" value="" hidden>
                     </div>
                 </div>
                  <div class="col s12">
                      <p class="center-align">
                          <a class="waves-effect grey darken-4 btn" onclick="closeModalCompra();">Cancelar</a>
                          <button type="submit" class="waves-effect grey darken-4 btn">Comprar</button>
                      </p>
                  </div>
              </form>
          </div>
      </div>
  </div>
