<div id="modalMedicamentos" class="modal">
    <div class="modal-content" id="modalContent">
        <div class="row">
            <div class="col s12">
                <h3>Stock actual</h3>
            </div>
            <div class="col s12">
                <table>
                    <thead>
                        <tr>
                            <th>Medicamento</th>
                            <th>Stock Mostrador</th>
                            <th>Stock Deposito</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for medicamento in medicamentos %}
                        <tr>
                            <td>{{medicamento.getNombre}}</td>
                            <td>{{medicamento.getStockMostrador}}</td>
                            <td>{{medicamento.getStockDeposito}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col s12">
                <p class="center-align">
                    <a class="waves-effect grey darken-4 btn" onclick="closeModalMedicamentos();">Salir</a>
                </p>
            </div>
        </div>
    </div>
</div>
